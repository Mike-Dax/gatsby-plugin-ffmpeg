{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "CommonJS",
    "target": "es2019",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": ["./src/*.ts"]
}
